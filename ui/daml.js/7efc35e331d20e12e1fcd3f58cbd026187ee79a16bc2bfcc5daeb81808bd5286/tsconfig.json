{
    "compilerOptions": {
        "declaration": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "commonjs",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "outDir": "lib",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es5"
    },
    "include": [
        "src/**/*.ts"
    ]
}