module Iou where

type IouId = ContractId Iou


template Iou
  with
    amount        : Decimal
    houseHandle   : Text             --digital receipt for cash/credit  or email for money exchange services like Zelle
    bettorHandle  : Text             --digital receipt for cash/credit  or email for money exchange services like Zelle
    house         : Party
    bettor        : Party 
  where
    ensure (houseHandle /= " " &&  bettorHandle /= " " && amount /=0.0)
    signatory house,bettor
